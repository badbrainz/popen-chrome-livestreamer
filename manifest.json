{
    "name": "Livestreamer",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Use a local media player.",
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [{
        "js": [
            "utils.js",
            "twitch.js"
        ],
        "matches": [
            "*://www.twitch.tv/*"
        ]
    },{
        "js": [
            "utils.js",
            "youtube.js"
        ],
        "matches": [
            "*://www.youtube.com/*"
        ]
    }],
    "omnibox":{
        "keyword":"livestreamer"
    },
    "permissions": [
        "contextMenus",
        "notifications",
        "nativeMessaging"
    ]
}
